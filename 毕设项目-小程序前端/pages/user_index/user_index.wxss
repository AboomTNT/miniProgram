/* pages/user_index/user_index.wxss */

@import "../../pages/index01/index01.wxss";
.divLine{
  background: whitesmoke;
   width: 100%;
   height: 1rpx;
}
.top {
    background-color: var(--themecolor);
    height: 300rpx;
}

.head_image {
    padding: 10rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.head_icon {
    height: 200rpx;
    width: 200rpx;
    border-radius: 100rpx;
    border: 1rpx;
    border-style: solid;
    border-color: whitesmoke;
}

.name_and_gender {
    color: white;
    font-size: 32rpx;
    padding: 10rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 50rpx;
}

.name_and_gender image {
    height: 50rpx;
    width:50rpx
}

.user_imformation {
    height: 100rpx;
    background-color: #fff;
    padding: 10rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 24rpx;
    color: grey;
}

.address {
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.user_imformation view {
    margin: 0 20rpx;
}

.address image {
    height: 50%;
}

.fans {
    background-color: #fff;
    width: 100%;
}

.fans_button {
    padding: 10rpx;
    border-style: solid;
    border-width: 1rpx;
    border-color: var(--themecolor);
    color: var(--themecolor);
    font-size: 24rpx;
    border-radius: 25rpx;
    height: 50rpx;
}

.fans_text {
    padding: 10rpx;
    font-size: 24rpx;
    color: grey;
    display: flex;
    justify-content: space-around;
}

.tabs_content {
    margin-top: 10rpx;
    padding: 10rpx;
    background-color: #fff;
    display: flex;
    justify-content: space-around;
}
.tabs_content view{
  background-color: white;
}
.appoitment {
    border-color: var(--themecolor);
    border-width: 1rpx;
    border-style: solid;
    background-color: var(--themecolor);
    color: white;
    padding: 10rpx;
    width: 100vw;
    text-align: center;
    position: fixed;
    bottom: 0;
}
.footer{
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: gray
}
.footer button{
  background-color:var(--themecolor);
  color: white;
  font-size: 24rpx;
  text-align: center;
}