/* pages/index01/index01.wxss */

swiper {
    width: 100%;
    height: calc(750rpx*800/2000);
}

swiper image {
    width: 100%;
}

page {
    background-color: #efeff4;
}

.choose-content,
.name_and_gender {
    display: flex;
    justify-content: space-around;
}

.tui-picker-content {
    margin: 10rpx;
    border-radius: 10%;
    text-align: center;
    width: 25%;
    height: 30px;
    background-color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
}

.tui-picker-detail {
    font-size: 24rpx;
    padding: 0 10px;
    overflow: hidden;
}

.pull_icon {
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.pull_icon image {
    height: 24rpx;
}

.divLine {
    background: #E0E3DA;
    width: 100%;
    height: 1rpx;

}

.index_message {
    height: 680rpx;
    padding: 10rpx;
    background-color: #fff;
    width: 100%;
    margin-top: 5rpx
}

.index_message_header,
.name_and_gender {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.writer_left {
    height: 100%;
    display: flex;
}

.index_message_header {
    height: 120rpx;
}

.index_message_header {
    padding: 10rpx;
}

.header_icon {
    padding: 10rpx;
    width: 120rpx;
}


.gender_icon image,
.address_icon image {
    height: 100%;
}
.header_icon image{
  border-radius:50rpx;
  height: 100rpx;
  width: 100rpx;
}
.writer_message {
    height: 100%;
}

.name {
    font-size: 32rpx;
    padding: 5rpx;
}

.gender_icon,
.address_icon {
    height: 30rpx;
}

.writer_identity,
.footer {
    padding: 5rpx;
    font-size: 24rpx;
    color: gray;
    display: flex;
    justify-content: space-between;
}

.address {
    padding: 10px;
    display: flex;
    align-items: center;
}

.address_text {
    color: gray;
    font-size: 32rpx;
}

.title {
    padding: 10rpx;
    font-size: 36rpx;
}

.content {
    font-size: 28rpx;
    padding: 10rpx;
}

.content_image {
    height: 320rpx;
    display: flex;
    padding: 10rpx 0;
    align-items: center;
}

.content_image image {
    padding: 0 5rpx;
    height: 100%;
}

.footer_left,
.lables {
    display: flex;
}

.footer_left text {
    width: 150rpx;
}

.lables view {
    margin: 10rpx;
    width: 100rpx;
    text-align: center;
    border-style: solid;
    border-color: var(--themecolor);
    border-radius: 20rpx;
    color: var(--themecolor);
    border-width: thin;
}