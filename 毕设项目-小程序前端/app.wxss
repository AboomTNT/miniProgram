/**app.wxss**/

page,
view,
text,
swiper,
swiper-item,
image,
navigator {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
}

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 200rpx 0;
    box-sizing: border-box;
}

.center {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 10rpx;
}

page {
    /* 主题颜色 */
    --themecolor: darkseagreen;
    /*统一字体大小 */
    font-size: 28rpx;
}